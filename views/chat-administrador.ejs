<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="./chat.js" defer></script>
    <title>Chat</title>
  </head>
        <h2>Chat</h2>
        <form>
          <div>
            <div>
              <% messages.forEach(function(message) { %>
              <span><%= message.email %></span>
              <span> [<span><%= message.date %></span>]: </span>
              <span><%= message.text %></span>
              <br />
              <% if(message.response) { %>
              <p>Respuesta: <%= message.response %></p>
              <% } else { %>
              <button
                type="button"
                onclick="window.location.href='/chat/admin/<%= message.id %>'"
              >
                Responder
              </button>
              <% } %>
              <hr />
              <% }) %>
            </div>
          </div>
          <a href="/chat">Volver al chat general</a>
        </form>
</html>
